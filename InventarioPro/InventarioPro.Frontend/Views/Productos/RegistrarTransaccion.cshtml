@model Operacion

@{
    ViewData["Title"] = "Registrar Transacción de Inventario";
}

<h2>Registrar Transacción de Inventario</h2>

<form asp-action="RegistrarTransaccion" method="post">
    <input type="hidden" asp-for="ProductoId" /> 
    <input type="hidden" asp-for="Producto.CategoriaId"/>
    <input type="hidden" asp-for="Fecha" />
    <div class="form-group">
        <label asp-for="Producto.Nombre"></label>
        <input asp-for="Producto.Nombre" class="form-control" readonly />
    </div>
    <div class="form-group">
        <label asp-for="Producto.Cantidad"></label>
        <input asp-for="Producto.Cantidad" class="form-control" readonly/>
    </div>
    <div class="form-group">
        <label asp-for="Producto.Codigo"></label>
        <input asp-for="Producto.Codigo" class="form-control" readonly />
    </div>
    <div class="form-group">
        <label asp-for="Producto.Categoria.Nombre"></label>
        <input asp-for="Producto.Categoria.Nombre" class="form-control" readonly />
    </div>
    <div class="form-group">
        <label asp-for="Cantidad">Cantidad</label>
        <input asp-for="Cantidad" class="form-control" />
        <span asp-validation-for="Cantidad" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Tipo">Tipo de Operación</label>
        <select asp-for="Tipo" class="form-control">
            <option value="Entrada">Entrada</option>
            <option value="Salida">Salida</option>
        </select>
    </div>
    <button type="submit" class="btn btn-primary">Registrar</button>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
